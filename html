  <!-- Firebase -->
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-database-compat.js"></script>
  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyA5-9_rFH_C5UVqF_bcywV1odjBG8S7xoQ",
      authDomain: "iot-dashboard-3ccd3.firebaseapp.com",
      projectId: "iot-dashboard-3ccd3",
      storageBucket: "iot-dashboard-3ccd3.appspot.com",
      messagingSenderId: "583952329350",
      appId: "1:583952329350:web:474403b0a3c33f4a9aff07"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    const refs = {
      light: db.ref("devices/light"),
      fan: db.ref("devices/fan")
    };

    function toggleDevice(device) {
      refs[device].once("value").then(snapshot => {
        const current = snapshot.val();
        const newState = current === "On" ? "Off" : "On";
        refs[device].set(newState);
      });
    }

    function updateStatus(device, value) {
      const statusElement = document.getElementById(`${device}Status`);
      statusElement.textContent = value;
      statusElement.classList.remove("on", "off");
      statusElement.classList.add(value === "On" ? "on" : "off");
    }

    refs.light.on("value", snap => {
      updateStatus("light", snap.val() || "Off");
    });

    refs.fan.on("value", snap => {
      updateStatus("fan", snap.val() || "Off");
    });
  </script>
